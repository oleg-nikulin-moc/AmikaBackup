<div class="clearfix my-account account">

  <div class="container clearfix ac-order__container">

    {% include 'account_menu' %}
    <div class="my-account-content ac-order" data-order>
      <div class="ac-order__header" data-order-header>
        <a href="/account#orders">
          <svg class="ac-icon--order" role="presentation" width="34" height="38">
            <use href="#orderIcon">
          </svg>
        </a>
        <h1 class="ac-order__title" style="position: relative;">order {{ order.name }}</h1>
        <button class="ac-btn ac-btn__order-info" type="button" id="myButton" data-order-info-btn>order info</button>
      </div>
      <div class="ac-order__header hidden" data-order-header-info>
        <a role="button" data-order-info-btn>
          <svg class="ac-icon--order" role="presentation" width="34" height="38">
            <use href="#orderIcon">
          </svg>
        </a>
        <h1 class="ac-order__title" style="position: relative;">order info</h1>
        <p class="ac-order-status ac-order-status-header ac-order-status--{{ order.financial_status }}">{{ order.financial_status }}</p>
      </div>
    {% if order.cancelled %}
      <div id="order_cancelled" class="flash notice">
        <h5 id="order_cancelled_title">Order Cancelled <span class="note">on {{ order.cancelled_at | date: "%B %d, %Y %I:%M%p" }}</span></h5>
        {% unless order.cancel_reason == "other" %}<span class="note">Reason: {{ order.cancel_reason }}</span>{% endunless %}
      </div>
    {% endif %}
      <div class="ac-order__box">
        <div class="ac-order--left">
            <ul class="ac-order__list">
            {% for line_item in order.line_items %}
              <li id="{{ line_item.id }}" class="ac-order__item {% cycle 'odd', 'even' %}">
                <a class="ac-order__product-link" role="button" href="{{ line_item.product.url }}">
                  <div class="ac-image-box">
                    <img class="ac-image--fluid" style="max-width: 163px;" src="{{ line_item.image | img_url: 'master' }}" alt="{{ line_item.title }}">
                  </div>
                  <div class="ac-order__product-info">
                    <h2 class="ac-order-product-info__title">{{ line_item.title }}</h2>
                    <div class="ac-order-product-info__description">{{ line_item.product.description }}</div>
                    {% unless line_item.product.has_only_default_variant %}
                      {% for option in line_item.variant.options %}
                          <p class="ac-order-product-info__variant">{{ option }}</p>
                      {% endfor %}
                    {% endunless %}
                    {% comment %}
                      {% if line_item.fulfillment %}
                        <div class="note">
                          Fulfilled {{ line_item.fulfillment.created_at | date: "%b %d" }}
                          {% if line_item.fulfillment.tracking_number %}
                            <a href="{{ line_item.fulfillment.tracking_url }}">{{ line_item.fulfillment.tracking_company }} #{{ line_item.fulfillment.tracking_number}}</a>
                          {% endif %}
                        </div>
                      {% endif %}
                    {% endcomment %}
                  </div>
                  <div class="ac-order-product__price">
                    <p class="ac-order-product-price__total ac-order-product-price__total--mobile">{{ line_item.quantity | times: line_item.price | money }}</p>
                    <p class="ac-order-product-price__item">{{ line_item.price | money }} x {{ line_item.quantity }}</p>
                  </div>
                </a>
              </li>
            {% endfor %}
              <li class="ac-order__item--total" style="text-align: right">
                <p class="ac-order-product-price__total">Total: {{ order.total_price | money }}</p>
              </li>
            </ul>
        </div>

        <div class="ac-order--right ac-order--right--hidden" data-order-info-block>
          <p class="ac-order-status ac-order-status--{{ order.financial_status }}">{{ order.financial_status }}</p>
          <h3 class="ac-order-shipping__title">order placed</h3>
          <p class="ac-order-placed__date">{{ order.created_at | date: "%B %d, %Y %I:%M%p" }}</p>
          <div id="order_address" class="ac-order-shipping">
            <h3 class="ac-order-shipping__title">shipping information</h3>
            <p class="ac-order-shipping__info">{{ order.shipping_address.street }}</p>
            <p class="ac-order-shipping__info">{{ order.shipping_address.city }}</p>
            <p class="ac-order-shipping__info">{{ order.shipping_address.province }}</p>
            <p class="ac-order-shipping__info">{{ order.shipping_address.zip }}</p>
            <p class="ac-order-shipping__info">{{ order.shipping_address.country }}</p>
          </div>
            {% comment %}
              {% if order.shipping_address %}
                <div id="order_shipping" class="ac-order-shipping">
                  <h2 class="order_section_title">billing address</h2>
                  <p class="order-status"><span class="note">Fulfillment Status:</span> <span class="status status_{{ order.fulfillment_status }}">{{ order.fulfillment_status }}</span></p>
                  <p>{{ order.billing_address.street }}</p>
                  <p>{{ order.billing_address.city }}</p>
                  <p>{{ order.billing_address.province }}</p>
                  <p>{{ order.billing_address.zip }}</p>
                  <p>{{ order.billing_address.country }}</p>
                  <p>{{ order.billing_address.name }}</p>
                  <p>{{ order.billing_address.company }}</p>
                  <p>{{ order.billing_address.phone }}</p>
                </div>
              {% endif %}
            {% endcomment %}
          </div>
        </div>
    </div>
  </div><!-- /.page-header -->
</div><!-- /.content -->