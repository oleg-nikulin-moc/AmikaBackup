<script>
  document.addEventListener('DOMContentLoaded', () => {
    const orderButtons = document.querySelectorAll('[data-order-info-btn]');
    const orderInfo = document.querySelector('[data-order-info-block]');
    const orderHeader = document.querySelector('[data-order-header]');
    const orderHeaderInfo = document.querySelector('[data-order-header-info]');
    const orderBlock =  document.querySelector('[data-order]');
    if (orderButtons) {
      orderButtons.forEach(orderButton => {
        orderButton.addEventListener('click', () => {
          orderHeader.classList.toggle('hidden');
          orderHeaderInfo.classList.toggle('hidden');
          orderBlock.classList.toggle('ac-order__mobile');
          orderInfo.classList.toggle('ac-order--right--hidden');
          orderInfo.classList.toggle('fade-in');
        });
      })
    }
  });
</script>
