<div id="customer-accounts"  class="register-login account clearfix">

  <div class="container clearfix">

    <!-- Customer Account Login -->

    <div id="customer-login" class="register-login">

      <h1>Customer Login</h1>

      <p class="note head">Create your password to activate your account</p>

      {% form 'activate_customer_password' %}
      {{ form.errors | default_errors }}

      <div id="password" class="clearfix form-row">
        <label class="large" for="password">Password</label>
        <input type="password" placeholder="Password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix form-row">
        <label class="large" for="password_confirmation">Password Confirmation</label>
        <input type="password" placeholder="Confirm Password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="form-actions">
        <input class="btn animation" type="submit" value="Activate Account" />
        <span >or</span>
        <input type="submit" class="cancel" name="decline" id="customer_decline" value="Decline Invitation" style="text-decoration: none;" />
      </div>
      {% endform %}

    </div>
  </div>
</div>

