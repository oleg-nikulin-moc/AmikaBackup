    function checkCart() {
      const productIds = JSON.parse('{{ tiersProducts }}');
      const cartProductIds = (window.Shopify.cart && window.Shopify.cart.items) ? window.Shopify.cart.items.map(item => item.product_id) : [];
      console.log('cartProductIds', cartProductIds);
      const submitOrderButton = document.querySelector('[data-submit-order]');
      const hasOtherProductIds = cartProductIds.some(productId => !productIds.find(product => product.product_id === productId));
    
      if (submitOrderButton && (cartProductIds.length === 0 || hasOtherProductIds)) {
        submitOrderButton.disabled = false;
      } else {
        submitOrderButton.disabled = true;
      }
    }
    
    checkCart();
    const dropdownElement = document.querySelector('[data-dropdown="cart"]');
    initializeDropdown(dropdownElement);
  });
