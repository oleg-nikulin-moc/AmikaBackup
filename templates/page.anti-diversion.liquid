<div class="page page-{{page.handle}} container text-center">
  <h1 class="page-title">{{page.title}}</h1>
  <div class="one-half small--one-whole push--large--one-quarter push--medium--one-quarter">
    {{ page.content }}
  </div>
</div>
<div class="hide">
  <div id="anti-diversion-popup">
    <div class="anti-diversion-container">
      <iframe height="1300" allowtransparency="true" frameborder="0" style="width: 100%; border: none;" src="https://loveamika.wufoo.com/embed/q1599j9x11ud9k9/">&amp;lt;a href="https://loveamika.wufoo.com/forms/q1599j9x11ud9k9/"&amp;gt;Fill out my Wufoo form!&amp;lt;/a&amp;gt;</iframe>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $(document).on("click", ".page-anti-diversion a", function(event){
      if($(this).attr("href").indexOf('wufoo') > -1){
        event.preventDefault();
        $.fancybox.open({
          src  : '#anti-diversion-popup',
          type : 'inline'
        });
      }
    });
  });
</script>