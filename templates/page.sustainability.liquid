<div class="page page-{{page.handle}} text-center">
  <div class="img-container img-top">
    <img src="{{ "amika_misc-group_still-life.png" | asset_img_url: "master" }}" class="img-responsive"/>
  </div>
  <div class="container">
    <h1 class="page-title">{{page.title}}</h1>
    <div class="one-half small--one-whole push--large--one-quarter push--medium--one-quarter">
      {{ page.content }}
    </div>
  </div>
</div>


