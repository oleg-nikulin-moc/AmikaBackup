  </div>
</div>


<script>
  $(function() {
    var ProductSlider = $('.js-product-slider');

    ProductSlider.slick({
      dots: false,
      arrows: true,
      infinite: true,
      slidesToShow: 3,
      responsive: [
        {
          breakpoint: 949,
          settings: {
            arrows: false,
            slidesToShow: 2,
            slidesToScroll: 2
          }
        },
        {
          breakpoint: 749,
          settings: {
            arrows: false,
            slidesToShow: 1,
            slidesToScroll: 1
