{% assign is_full_width = section.settings.full_width %}
<div class="{% if is_full_width == false %}container{% endif %} product__redesign">
    {% for block in section.blocks %}
    <div class="promo_block inverse_{{block.settings.grid_inverse}}" style="background:{{block.settings.bg_color}};">
        <img class="promo_block_image" 
            srcset="
                {{ block.settings.image | img_url: '2000x' }} 2000w, 
                {{ block.settings.image | img_url: '1500x' }} 1500w, 
                {{ block.settings.image | img_url: '1000x' }} 1000w, 
                {{ block.settings.image | img_url: '750x' }} 750w"
            sizes="(min-width:750px) 50vw, 100vw"
            src="{{ block.settings.image | img_url: '2000x' }} 2000w"
            data-src="{{ block.settings.image | img_url: '2000x' }}"
        >
        <div class="promo_block_content {% if is_full_width %}container{% endif %}">
            <h3 class="{{ block.settings.title_size }}" >{{block.settings.title}}</h3>
            {% if block.settings.subtitle != blank %}
                <p class="label">{{ block.settings.subtitle }}</p>
            {% endif %}
            {% if block.settings.subtext != blank %}
                <p class="p">{{block.settings.subtext}}</p>
            {% endif %}
      
            {% if block.settings.btn_text != blank %}
              <ul class="buttons-list">
                <button class="button button--primary promo_block_button" onclick="location.href='{{block.settings.btn_link}}';">{{block.settings.btn_text}}</button>
                <button class="button button--primary promo_block_button" onclick="location.href='{{block.settings.btn_link2}}';">{{block.settings.btn_text2}}</button>
               </ul>
              {% endif %}
        </div>
    </div>
    {% endfor %}

</div>

<script>
    document.addEventListener("DOMContentLoaded", function(event) {
        if (document.documentMode || /Edge/.test(navigator.userAgent)) {
            jQuery('.promo_block img').each(function(){
                var t = jQuery(this),
                    s = 'url(' + t.attr('data-src') + ')',
                    p = t.parent(),
                    d = jQuery('<div></div>');
        
                p.append(d);
                d.css({
                    'height'                : t.parent().css('height'),
                    'background-repeat'     : 'no-repeat',
                    'background-position'   : '50% 20%',
                    'background-image'      : s,
                    'width'                 : '50%'
                });
                t.hide();
            });
        }
    })
</script>

{% stylesheet "scss" %}
    .product__redesign.container .promo_block {
        grid-gap: 10px; 
    }
    .promo_block {
        display: grid;
        grid-template-columns: 1fr;
        align-items: center;
        justify-items: center;

        @media(min-width:750px) {
            grid-template-columns: 1fr 1fr;
        }

        &.inverse_true .promo_block_content {
            @media(min-width:750px) {
                grid-column-start: 1;
                grid-row-start: 1;
            }
        }

        .promo_block_image {
            width: 100%;
            max-width: 100%;
            object-fit: cover;

            @media(min-width:750px) {
                min-height: inherit;
            }
        }

        .promo_block_content {
            padding-top: 30px;
            padding-bottom: 30px;
            text-align: center;

            @media(min-width:750px) {
                max-width: 80%;
            }

            .h1 { 
                line-height: 44px;
                font-size: 32px;
                margin-bottom: 5px; 
                @media(min-width:750px) {
                    line-height: 70px;
                    font-size: 54px; 
                    margin-bottom: 20px;
                }
            } 

            .h3 {
                @media(min-width:750px) {
                    font-size: 30px; 
                    line-height: 40px;
                }
            }

            .label {
                font-size: 14px;
                line-height: 18px;
                color: #FF6B26; 
                @media(min-width:750px) {
                    font-size: 20px;
                }
            }

            .p { 
                font-size: 16px;
                line-height: 22px;
                margin: 15px auto 0px; 
                padding-bottom: 30px;

                @media(min-width:750px) {
                    font-size: 20px;
                    margin: 30px auto 21px;
                    line-height: 30px;
                }
            }

          .promo_block_button {
            border-radius: 100px;
            font-weight: 600;
            letter-spacing: 1px;
            border-width: 2px;

            @media(min-width:800px) {
              min-width: 140px;
              min-height: 40px;
            }
          }

          .promo_block_button:first-child {
            margin-right: 20px;
          }
        }
    }
{% endstylesheet %}

<style>
@media screen and (-ms-high-contrast: active), (-ms-high-contrast: none) {
    .promo_block {
        display: -ms-flexbox;
        overflow: hidden;
    }

    .promo_block .promo_block_content {
        width: 50%;
        flex: 1;
    }

    .promo_block.inverse_false {
        -ms-flex-direction: row-reverse;
    }

    .loyalty-copy .copy-items {
        display: -ms-flexbox;
        -ms-flex-wrap: wrap;
        justify-content: space-between;
    }
}
</style>

