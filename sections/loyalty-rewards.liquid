<style>
  .svg-icon {
    width: 5px;
    height: 5px;
    fill: #fff;
  }

  sup {
    vertical-align: super;
    font-size: 10px;
  }

  .nowrap {
    white-space: nowrap;
  }

  .loyalty-rewards {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    background: #FEFAF0;
  }

  .loyalty-rewards::before {
     position: relative;
     content: '';
     border-radius: 0 999px 999px 0;
     background-color: #FF6B26;
     flex: 1 1 34%;
     left: -6vw;
     align-self: center;
     padding-bottom: 55%;
  }


  .loyalty-table {
    max-width: 800px;
    margin-right: 13%;
    flex-basis: 66%;
  }

  .loyalty-table {
    font-family: 'Founders Grotesk Mono';
    letter-spacing: 1px;
    font-size: 12px;
    line-height: 20px;
    text-align: center;
    border-collapse: collapse;

  }

  .chart-table {
    padding: 0;
  }

  .loyalty-thead {
    font-family: 'FuturaND';
    font-size: 12px;
    line-height: 20px;
    background-color: #FF6B26;
    font-weight: 500;
    color: #fff;
    min-width: 350px;
  }

  .first-bg {
    background-color: #f8c7b4;
  }

  .second-bg {
    background-color: #f8e2da;
  }

  .loyalty-td {
    padding: 15px 3px;
    border: 2px solid #fff;
    font-size: 9px;
    line-height: 15px;
  }

  .subscript-copy:first-child {
    padding-top: 30px;
  }
  .subscript-copy {
    margin-left: 15%;
  }
  .subscript-copy:last-child {
    margin-bottom: 50px;
  }

  @media(min-width: 750px) {

    .chart-table {
    padding: 0 30;
     margin-right: 2%
    }
    
    .loyalty-table {
      font-size: 14px;
      line-height: 20px;
    }

    .svg-icon {
      width: 15px;
      height: 15px;
    }

    .loyalty-td {
      font-size: 20px;
      line-height: 30px;
      min-width: 120px;
      padding: 20px 0;

    }
  }
</style>

