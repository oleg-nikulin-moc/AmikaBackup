      },
      {
        "type": "html",
        "id": "h_intro",
        "label": "Introduction Text",
        "default": "Test"
      }
  ],
  "presets": [
      {
        "name": "Text Block",
        "category": "Text"
      }
  ]
  }
{% endschema %}

