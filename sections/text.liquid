<div class="container introduction-text">
  <h2 style="font-style:medium">{% if section.settings.h_intro_link %}<a href="{{section.settings.h_intro_link}}">{% endif %}<p>{{section.settings.h_intro}}</p>{% if section.settings.h_intro_link %}</a>{% endif %}</h2>
</div>


<style> 
  
  
  .template__index .introduction-text h2 span {
    border-bottom: 5px solid #fff;
  }
    
   .template__index .introduction-text h2 {
    text-align: center;
    font-size: 32px;
    line-height: 1.7em;
    margin-bottom: 30px;
     
  }
  .introduction-text { display: block;
  					font-style:medium;
  				
  }
 
@media(min-width:320px) and (max-width: 768px){
  .template__index .introduction-text h2 {
    text-align: center;
    font-size: 16px;
    line-height: 1.7em;
    margin-bottom: 0px;
  }
  
@media all and (max-width: 768px) {
    .mo-br {display: inherit;text-decoration:none;}
  }

  
  .introduction-text { display: block;
  						font-style:medium;
  						
  }
}

