{% schema %}
  {
    "name": "FAQs",
    "class": "faqs",
	"max_blocks": 20,
    "settings": [],
    "blocks": [
      {
        "type": "question",
        "name": "Question",
        "settings": [
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          },
		  {
            "type": "richtext",
            "id": "answer",
            "label": "Answer"
          }
        ]
      }
    ]
  }
{% endschema %}

<div class="one-half small--one-whole push--large--one-quarter push--medium--one-quarter">
  <div class="accordion">
    {% for block in section.blocks %}
    <div class="acc-item clearfix">
      <h2><a href="javascript:void(0);" class="acc-title">{{ block.settings.question }}</a></h2>
      <div class="hide acc-content clearfix">
        {{ block.settings.answer }}
      </div>
    </div>
    {% endfor %}
  </div>
</div>

