{% schema %}
  {
    "name": "Careers",
    "class": "careers",
	"max_blocks": 15,
    "settings": [
      {
        "type": "header",
        "content": "General"
      }
    ],
    "blocks": [
      {
        "type": "career",
        "name": "Career",
        "settings": [
		  {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ]
  }
{% endschema %}

<div class="careers">
  {% for block in section.blocks %}
  <h2 id="{{ block.id }}">
    <a href="{{ block.settings.link }}">
      {{ block.settings.text }}
    </a>
  </h2>
  {% endfor %}
</div>