{% schema %}
  {
    "name": "Collection Banner",
    "settings": [
     {
       "type": "select",
       "id": "banner_text_position",
       "options": [
          { "value": "left", "label": "Left"},
          { "value": "center", "label": "Center"},
          { "value": "right", "label": "Right"}
       ],
       "default":   "right",
       "label": "Banner Text Position"
    },
    {
        "type": "range",
        "id": "heading-fontSize-min",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Collection Title Font Min Size",
        "default": 12
    },
    {
        "type": "range",
        "id": "heading-fontSize-max",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Collection Title Font Max Size",
        "default": 40
     },
     {
        "type": "range",
        "id": "subheading-fontSize-min",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Collection Description Font Min Size",
        "default": 8
    },
    {
        "type": "range",
        "id": "subheading-fontSize-max",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Collection Description Font Max Size",
        "default": 24
     }
   ]
  }
{% endschema %}

