    <ul class="buttons-list">
      {%- for block in section.blocks -%}
        <li class="button-item">
          <button class="button">
            <a href="{{ block.settings.link }}">
              {{ block.settings.button_label }}
            </a>
          </button>
        </li>
      {%- endfor -%}
    </ul>

{% schema %}
{
  "name": "Buttons",
  "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "Button",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        }
      ]
    }
  ]
}
{% endschema %}




