{% schema %}
  {
    "name": "HairToStayFAQs",
    "class": "faqs",
	"max_blocks": 15,
    "settings": [],
    "blocks": [
      {
        "type": "question",
        "name": "Question",
        "settings": [
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          },
		  {
            "type": "richtext",
            "id": "answer",
            "label": "Answer"
          }
        ]
      }
    ]
  }
{% endschema %}



<div class="one-half small--one-whole push--large--one-quarter push--medium--one-quarter">
  
  <div class="embed-container">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/pu2VK4SJNt0?rel=0&amp;showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
  </div>
  
  
  <div class="accordion-block">
    {% for block in section.blocks %}
    <div class="acc-item clearfix">
      <h2><a href="javascript:void(0);" class="acc-title">{{ block.settings.question }}</a></h2>
      <div class="acc-content clearfix">
        {{ block.settings.answer }}
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<style>
  .embed-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    max-width: 100%;
  }
  .embed-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>



