/*---------------------------------------
#Style guide page specific
--------------------------------------*/
.style__guide {
  margin: 50px 0;
  
  .style__heading {
    margin-bottom: 50px;
  }

  .color__box {        
    width: 150px;
    height: 150px;
    margin: 0 auto;
    border-radius: 50%;
    margin-bottom: 15px;
  
    &.white {
      border: 1px solid #000;
    }
  }
}

.style__guide,
.template__index,
.template__page {
  h1, h2, h3 {
    margin-bottom: 15px;
  }
  .input__group {
    label {
      width: 100%;
      display: block;
      margin-bottom: 10px;
    }
    input, select {
      width: 100%;
    }
  }
  .radio__group,
  .checkbox__group {
    margin-bottom: 15px;
  }
  button {
    margin-bottom: 20px;
  }
  .button--pressed {
    color: #FF6B26;
    border-color: #FF6B26;
    background: transparent;
  }
  .slider__wrapper {
    margin: 0 auto;
    max-width: 1150px;

    .slick-slider {
      margin: 0 -10px;
    }
  }
  .product__grid--placeholder {
    width: 100%;
    min-height: 380px;
    background: #FF6B26;
  }

  .slick-arrow {
    width: 50px;
    font-size: 0;
    height: 50px;
    top: calc(50% - 25px);

    &.slick-prev {
      left: -50px;
    }
    &.slick-next {
      right: -50px;
    }
  }

}

.style__guide,
.product__redesign,
.template__index,
.template__page,
.templateCollection {
  font-size: 16px;
  line-height: 22px;

  @media(max-width: 584px) {
    font-size: 14px;
    line-height: 20px;
  } 
  
  h1, .h1 {
    font-size: 40px;
    line-height: 50px;

    @media(max-width: 584px) {
      font-size: 30px;
      line-height: 38px;
    }
  }

  h2, .h2 {
    font-size: 30px;
    line-height: 44px;

    @media(max-width: 584px) {
      font-size: 24px;
      line-height: 34px;
    }
  }

  h3, .h3 {
    font-size: 20px;
    line-height: 30px;

    @media(max-width: 584px) {
      font-size: 16px;
      line-height: 22px;
    }
  }

  .lead {
    font-size: 20px;
    line-height: 30px;
    @media(max-width: 584px) {
      font-size: 16px;
      line-height: 22px;
    }
  }

  .label{
    font-family: Founders Grotesk Mono;
    letter-spacing: 1px;
    font-size: 12px;
    line-height: 20px;
    text-transform: uppercase;
    
    @media(max-width: 1024px) {
      line-height: 16px;
    }    
  }



  .button--inverse {
    font-family: 'Founders Grotesk Mono', Arial, Helvetica, sans-serif;
    &:hover:not([disabled]) {
      color: #ffffff;
      background: #000000;
    }
    // &:active:not([disabled]),
    // &:focus:not([disabled]) {
    //   color: #FF6B26;
    //   border-color: #FF6B26;
    //   background: transparent;
    // }
  }

  .button--full {
    width: 100%;
  }

  .radio__label {
    position: relative;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    padding-left: 30px;
    display: inline-block;

    input {    
      width: 0;
      height: 0;
      opacity: 0;
      cursor: pointer;
      position: absolute;
    }

    .radio__checkmark {
      top: 0;
      left: 0;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      position: absolute;
      border: 1px solid #FF6B26;
      -webkit-transition: all 0.2s linear;
      -moz-transition: all 0.2s linear;
      -ms-transition: all 0.2s linear;
      -o-transition: all 0.2s linear;
      transition: all 0.2s linear;
    }

    input:checked ~ .radio__checkmark {
      background-color: #FF6B26;
    }
    input:disabled ~ .radio__checkmark {
      opacity: 0.4;
      cursor: no-drop;
    }
  }

  .checkbox__label {
    position: relative;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    padding-left: 30px;
    display: inline-block;

    input {    
      width: 0;
      height: 0;
      opacity: 0;
      cursor: pointer;
      position: absolute;
    }

    .checkbox__checkmark {
      top: 0;
      left: 0;
      width: 16px;
      height: 16px;
      position: absolute;
      border: 1px solid #FF6B26;
      -webkit-transition: all 0.2s linear;
      -moz-transition: all 0.2s linear;
      -ms-transition: all 0.2s linear;
      -o-transition: all 0.2s linear;
      transition: all 0.2s linear;

      &:after {
        content: '';      
        top: 0;
        left: 4px;
        width: 5px;
        height: 10px;
        display: none;
        position: absolute;
        border: solid white;
        border-width: 0 2px 2px 0;
        -webkit-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        transform: rotate(45deg);      
      }
    }

    input:checked {
      ~ .checkbox__checkmark {
        background-color: #FF6B26;

        &:after {
          display: block;
        }
      }
    }
    input:disabled ~ .checkbox__checkmark {
      opacity: 0.4;
      cursor: no-drop;
    }
  }

  .product__grid {
    position: relative;

    .product__grid--info {
      padding: 35px 0;
      text-align: center;
    }
    .product__grid--title,
    .product__grid--subtitle {
      font-weight: 500;
      line-height: 24px;
    }
    .product__grid--meta {
      font-size: 14px;
      font-weight: 400;  
      margin: 5px auto;
      max-width: 200px;
      line-height: 24px;    
    }
    .product__grid--price {
      margin: 10px 0;
      font-size: 12px;
      line-height: 18px;    
    }
    .product__grid--action {
      opacity: 0;   
      margin-top: 25px;
      visibility: hidden;
      -webkit-transition: all 0.2s linear;
      -moz-transition: all 0.2s linear;
      -ms-transition: all 0.2s linear;
      -o-transition: all 0.2s linear;
      transition: all 0.2s linear;
    }

    &:hover {
      .product__grid--action {
        opacity: 1;
        visibility: visible;
      }
    }
  }

  .slick-arrow {
    width: 50px;
    font-size: 0;
    height: 50px;

    &.slick-prev {
      left: -50px;
    }
    &.slick-next {
      right: -50px;
    }
  }


}




// Button Styles
.button{
  text-transform: uppercase;
  text-align: center;
  border:1px solid;
  display:inline-block;
  appearance: none;
  -webkit-appearance: none;
}

.button--rounded{
  border-radius: 100px;
}

.button--square{
  border-radius: 0px;
}

.button--noStyle{
  appearance: none;
  -webkit-appearance: none;
  background:none;
}

.button--large{
  @extend button;
  font-weight: 500;
  font-size: 0.875rem;
  line-height: 18px;
  padding: 10px 15px;

  @media(max-width:1024px){
    font-size:11px;
    line-height: 18px;
    padding:5px 10px;
    min-width: 100px;
    letter-spacing: 1px;
  }
}

.button--small{
  @extend button; 
  font-size:12px;
  line-height: 12px;
  letter-spacing: 1px;
  padding: 5px 15px 5px;
  font-weight: 500;

  @media(max-width:768px){
    font-size:11px;
    line-height:11px;
  }
}

.button--fullWidth{
  width: 100%;
  display: block;
  box-sizing: border-box;
}


.button--outlined{
  background-color:#FEFAF0;
  border-color:#000;
  color: #000;

  &:hover, 
  &:focus{
    background: #000 !important;
    color:#FEFAF0 !important;
    opacity: 1 !important;
  }
}

.button--orange{
  background-color:#FF6B26;
  border-color:#FF6B26;
  color: #000;

  &:hover, 
  &:focus{
    background: #fff;
    color:#FF6B26;
    opacity: 1 !important;
  }
}


.button--black{
  background-color:#000 !important;
  border-color:#000;
  color: #fff;

  &:hover, 
  &:focus{
    background: #fff;
    color:#000;
    opacity: 1 !important;
  }
}


.button--primary{
  @extend .button;
  @extend .button--rounded; 
  @extend .button--large; 
  background-color:#000;
  border-color:#000;
  color: #FEFAF0;
  font-family: 'FuturaND';
  min-width: 100px;

  &:hover, 
  &:focus{
    background: #FEFAF0;
    color:#000;
    opacity: 1;
  } 

  &.button--outlined{
    @extend .button--outlined;
  }
}

.button--secondary{
  @extend .button;
  @extend .button--rounded; 
  @extend .button--small; 
  @extend .button--outlined;
  font-family: "Founders Grotesk Mono" !important;

  &.button--outlined{
    @extend .button--outlined;
  }

  &.button--square{
    @extend .button--square;
  }

  &.button--black{
    @extend .button--black;
  }  
}



