.templateArticle {
  #header { 
    background: transparent;
    -webkit-transition: all 0.2s linear;
    -moz-transition: all 0.2s linear;
    -o-transition: all 0.2s linear;
    -ms-transition: all 0.2s linear;
    transition: all 0.2s linear;
  }

  #header.scroll {
    background: white;
    -webkit-transition: all 0.2s linear;
    -moz-transition: all 0.2s linear;
    -o-transition: all 0.2s linear;
    -ms-transition: all 0.2s linear;
    transition: all 0.2s linear;
  }

  .content-wrapper {
    @media (min-width: 769px) {
      padding-top: 0px !important;
    }

    .container {
      overflow: hidden;
    }

    .blog__hero_wrapper {
      background-position: center;
      background-size: cover;
      position: relative;
      margin-bottom: 10px;

      .container {
        position: relative;
        height: 70vh;
      }

      .blog__hero_text {
        position: absolute;
/*         position: relative; */
/*         bottom: 40px;
        right: 40px; */

        .hero__text {
          font-size: 2.4vw;
          font-weight: 600;

          .hero__text_2 {
            font-size: 1.5vw;
            font-weight: 300;


            @media only screen and (max-width: 584px) {
              position: absolute;
              bottom: 50%;
              right: 50%;
              transform: translate(50%,50%);
              width: 50%;
              text-align: center;

              .hero__text {
                font-size: 20px;

                .hero__text_2 {
                  font-size: 10px;
                }
              }
            }
          }
        }
      }
    }
    
    .back__to_blog {
      margin: 50px 0px;
      display: block;
      
      @media(max-width: 584px) {
        margin: 24px 0px;
        
        &.grid__item {
          padding-left: 0px;
        }
      }
      
      a {
       font-size: 14px;
        
        @media(max-width: 584px){
          font-weight: 600;
        }
        
        span {
          margin-right: 10px;
        }
      }
    }
    
    .article__content {
      @media only screen and (max-width: 1024px) {
        &.grid__item {
          padding-left: 0px;
        }
      }
      
      .blog__title {
        line-height: 1.6;
        font-size: 26px;
        margin: 40px 0px 30px;
      }
    }
    
    @media only screen and (max-width: 1024px) {
       .five-eighths.grid__item.small--one-whole.medium--one-whole {
         padding-left: 0px;
         width: 100%;
       }
       
       #RS_sidebar {
         display: none;
       }
     }
    
     #RS_sidebar {
        padding-left: unset;

        .featured__content {
          transform: translateZ(0);
          -webkit-transform: translateZ(0);
          backface-visibility: hidden;
          -webkit-backface-visibility: hidden;
          -webkit-perspective: 1000;

          img.sidebar__featured_img { 
            width: 100%;
            object-fit: cover;
            display: block;
          }

          .featured__text {
            padding: 20px;
            background: #fbef5d;

            h2 {
              text-align: center;
              font-size: 16px;
              margin-bottom: 14px;
            } 
            p {
              text-align: center;
              font-size: 14px;

              .feature__read_more,
              .feature__read_more:hover {
                color: black;
                text-decoration: underline;
                font-weight: 400;
                opacity: 1;
              }
            }
          }
          .pop__article {
            margin: 10px 30px;

            .pop__article_title {
              margin: 30px auto;
              text-align: center;
              font-size: 14px;
              font-weight: bold;
              font-style: italic;
            }

            .pop__art {
              display: flex;

              img { 
                width: 120px;
                height: 74px;
                border: 1px solid #cccccc;
                margin: 10px 20px 10px 0px;
                object-fit: cover;
              }

              .pop__art_text {
                margin-top: 10px;

                p.super__text {
                  font-size: 10px;
                  letter-spacing: 2px;
                  margin-bottom: 2px;
                }

                p.art__title {
                  font-size: 14px;
                  font-weight: 500;
                }
              }
            }
          }

        
      }
    }
  }
  
  .insta-title a {
    text-align: center;
    font-size: 31px;
    color: #000000;
    font-family: 'FuturaND';
    font-weight: 500;
    font-style: normal;
    text-transform: none;
    margin: 0;
    letter-spacing: 0.025em;
    line-height: 1em;
  }
  
}
