#header { 
  background: transparent;
  -webkit-transition: all 0.2s linear;
  -moz-transition: all 0.2s linear;
  -o-transition: all 0.2s linear;
  -ms-transition: all 0.2s linear;
  transition: all 0.2s linear;
}

#header.scroll {
  background: white;
  -webkit-transition: all 0.2s linear;
  -moz-transition: all 0.2s linear;
  -o-transition: all 0.2s linear;
  -ms-transition: all 0.2s linear;
  transition: all 0.2s linear;
}

.content-wrapper {
  @media(min-width:749px){
  padding-top: 0px !important;
  }
  
  .blog__hero_wrapper {
    background-position: center;
    background-size: cover;
    position: relative;
    margin-bottom: 10px;
    
    .container {
      position: relative;
      height: 70vh;
    }
    
    .blog__hero_text {
      position: absolute;
      
      .hero__text {
        font-size: 2.4vw;
        font-weight: 600;
      }

      #the_strand {
        width: 60%;

        @media(max-width:748px){
          min-width: 100px;
        }
      }
  /*       @media only screen and (max-width: 584px) {
          position: absolute;
          bottom: 50%;
          right: 50%;
          transform: translate(50%,50%);
          width: 100%;
    	  text-align: center;
        
        .hero__text {
          font-size: 20px;
        }
      } */
      
    }
  }
  
  .blog__tag {
    text-align: center;
    margin: 26px auto;
    
    .blog__tag_link {
      margin: 0 10px;
      &.blg__active {
        color: #ffc2c8;
        font-weight: 500;
      }
    }
  }
  
  .blog__content_wrapper {
    overflow: hidden;
    
      @media only screen and (max-width: 584px) {
        .grid__item {
          padding-left: 0px;
        }
      }
    
     @media only screen and (max-width: 1024px) {
       .three-quarters {
         padding-left: 0px;
         width: 100%;
       }
       
       #RS_sidebar {
         display: none;
       }
     }
    
    
    .blog__content {
      margin: 0px auto;
      overflow: hidden;
      display: flex;    
      align-items: center;
      

      @media only screen and (max-width: 584px) {
        display: block;
      }
      
      &:nth-child(even) {
        background: #ddb7e8;
        
          .blog__content_image {
            order: 2;
          }
          .blog__content_text {
            order: 1;
            
            .super__title {
              margin-bottom: 40px;
            }
            
            .article__content {
              margin-top: 40px;
            }
          }
      }
      
      &:nth-child(odd) {
        background: #fead5b;
        
          .blog__content_image {
            order: 1;
          }
          .blog__content_text {
            order: 2;
            
            .super__title {
              margin-bottom: 10px;
            }
            
            .article__content {
              margin-top: 70px;
            }
          }
      }
      
      @media only screen and (max-width: 584px) {
        &:nth-child(odd),
        &:nth-child(even) {
          
          .blog__content_text {
            .super__title {
              margin-top: 20px;
              margin-bottom: 0px;
            }
          }
        }
      }
      
      .blog__content_image {
        flex: 2;
        background: white;
        
        img {
          display: block;
          width: 100%;
          height: 460px;
          object-fit: cover;
          
          &.no__image { 
            opacity: 0;
            
            @media only screen and (max-width: 584px) {
              display: none;
            }
          }
          
          @media only screen and (max-width: 584px) {
            height: 330px;
          }
        }
      }
      
      .blog__content_text {
        flex: 3;
        
        .content__text_wrapper {
            max-width: 400px;
            margin: 0 auto;
            display: block;
            @media only screen and (max-width: 584px) {
              padding: 4px 20px;
            }
          
          @media only screen and (max-width: 900px) and (min-width: 585px) {
            max-width: 300px;
          }
          
            .super__title {
              font-size: 12px;
              color: #fff;
              letter-spacing: 2px;
            }

            .heading__title {
              font-size: 32px;
              line-height: 1.4;
              
              @media only screen and (max-width: 584px) {
                 font-size: 28px;
                }
            }
          .article__content {
            
            a.article__read_more,
            a.article__read_more:hover {
              color: black;
              text-decoration: underline;
              font-weight: 400;
    		  opacity: 1;
            }
            
            @media only screen and (max-width: 584px) {
              font-size: 14px;
              margin-bottom: 20px;
              margin-top: 60px;
            }
          }
        }
      }
      
    }
    
    #RS_sidebar {
      padding-left: unset;
      
      .featured__content {
        transform: translateZ(0);
        -webkit-transform: translateZ(0);
        backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
        -webkit-perspective: 1000;
        transform: translate(0, 0); /* For browsers don't support translate3d. */
        transform: translate3d(0, 0, 0);
        will-change: position, transform;
        
        img.sidebar__featured_img { 
          width: 100%;
          object-fit: cover;
          display: block;
        }
        
        .featured__text {
          padding: 20px;
          background: #fbef5d;
          
          h2 {
            text-align: center;
            font-size: 20px;
            margin-bottom: 14px;
            line-height: 1.4;
          } 
          p {
            text-align: center;
            font-size: 14px;
            
            .feature__read_more,
            .feature__read_more:hover {
              color: black;
              text-decoration: underline;
              font-weight: 400;
              opacity: 1;
            }
          }
        }
        .pop__article {
          margin: 10px 30px;
          
          .pop__article_title {
            margin: 30px auto;
    		text-align: center;
            font-size: 14px;
            font-weight: bold;
    		font-style: italic;
          }
          
          .pop__art {
            display: flex;

            img { 
              width: 120px;
              height: 74px;
              border: 1px solid #cccccc;
              margin: 10px 20px 10px 0px;
              object-fit: cover;
            }
            
            .pop__art_text {
              margin-top: 10px;
              
              p.super__text {
                font-size: 10px;
                letter-spacing: 2px;
                margin-bottom: 2px;
              }
              
              p.art__title {
                font-size: 14px;
                font-weight: 500;
              }
            }
          }
        }
        
        
      }
    }
  }
}
 
.klaviyo__signup {
  .signup__image {
    img {
      width: 100%;
    }
  }
  .signup__inputs {
  	padding: 20px 10px;
    
    .input__group {
      display: inline-block;
      width: 100%;
      padding: 10px;
      border-bottom: 2px solid #EAEAEA;
      box-sizing: border-box;
      background: #f0f0f0;
    }
    input[type="email"] {
      width: 74%;
      color: #000000;
      border: none;
      padding: 0;
      font-size: 14px;
      letter-spacing: 0.05em;
    }
    input[type="submit"] {
      width: 24%;
      color: #000000;
      text-align: right;
      padding: 0;
      font-weight: bold;
      font-size: 14px;
      font-family: 'FuturaND';
    }
  }
  .subscribe-success {
    display: flex;
    min-height: 100px;
    align-items: center;    
    justify-content: center;
  }
}
.blog__footer {
  padding: 0 20px;
  max-width: 450px;
  margin: 0 auto;
  
  .signup__inputs {
  	padding: 20px 0;
  }
  
  @media(max-width: 1023px) {
  	display: block;
  }
}

.mailing-list {
  @media(max-width: 1023px) {
  	display: none;
  }
}