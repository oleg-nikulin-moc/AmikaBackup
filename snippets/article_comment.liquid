<div class="grid">
  <div class="grid__item one-whole">
    <span class="comment_author">{{ comment.author }}_</span>
    <time datetime="{{ comment.created_at | date: '%Y-%m-%d' }}" class="comment-date">{{ comment.created_at | date: '%b %d, %Y' }}</time>
  </div>
  <div class="grid__item one-whole">
    <div class="content">
      {{ comment.content }}
    </div>
  </div>
</div>