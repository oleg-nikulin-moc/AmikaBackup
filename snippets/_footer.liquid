function spin(target){
  target.css({"animation":"footer-spinning-giftcard--start 1s linear"});
  setTimeout(function(){
    target.css({"animation":"footer-spinning-giftcard--end 1s linear"});
    target.attr("src",img)
  },1000);
  
  setTimeout(function(){
    spin(target);
  },2000);
}

