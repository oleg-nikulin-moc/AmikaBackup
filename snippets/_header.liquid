                      <g id="Mobile-Nav" transform="translate(-340.000000, -83.000000)" stroke="#000000">
                          <g id="Icon-/-Profile" transform="translate(337.000000, 80.000000)">
                              <g id="Group" transform="translate(4.000000, 4.000000)">
